                <th>ID</th>
                <th>Nombre</th>
                <th>Genero</th>
                <th>Correo</th>
                <th>Telefono</th>
                <th>Rol</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>


    

    <h2>Autores</h2>
    <table id="tblListaAutores" class="table table-bordered table-hover">
